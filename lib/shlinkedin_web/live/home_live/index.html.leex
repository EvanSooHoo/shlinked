                            </svg>

                            <span class="truncate">
                                Tribune
                            </span>
                        </div>
                        <% end %>




                        <%= live_redirect to: Routes.market_index_path(@socket, :index) do %>
                        <div class="text-gray-600 hover:bg-gray-50 group flex items-center px-3 py-2 text-sm font-medium rounded-md"
                            aria-current="false">

                            <svg xmlns="http://www.w3.org/2000/svg"
                                class="text-gray-400 group-hover:text-gray-500 flex-shrink-0 -ml-1 mr-3 h-6 w-6"
                                fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />
                            </svg>
                            <span class="truncate">
                                Market
                            </span>
                        </div>
                        <% end %>




                        <%= live_redirect to: Routes.leaderboard_index_path(@socket, :index) do  %>
                        <div class="text-gray-600 hover:bg-gray-50 group flex items-center px-3 py-2 text-sm font-medium rounded-md"
                            aria-current="false">
                            <!-- Heroicon name: outline/trending-up -->
                            <svg class="text-gray-400 group-hover:text-gray-500 flex-shrink-0 -ml-1 mr-3 h-6 w-6"
                                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                                aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                            </svg>
                            <span class="truncate">
                                Leaderboard
                            </span>
                        </div>
                        <% end %>

                        <%= live_patch to: Routes.home_index_path(@socket, :new_invite) do %>
                        <div class="text-gray-600 hover:bg-gray-50 group flex items-center px-3 py-2 text-sm font-medium rounded-md"
                            aria-current="false">
                            <svg class="text-gray-400 group-hover:text-gray-500 flex-shrink-0 -ml-1 mr-3 h-6 w-6"
                                fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z">
                                </path>
                                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z">
                                </path>
                            </svg>
                            <span class="truncate">
                                Invite
                            </span>
                        </div>
                        <% end  %>

                        <a href="https://discord.gg/BkQGryuGjn"
                            class="text-gray-600 hover:bg-gray-50 group flex items-center px-3 py-2 text-sm font-medium rounded-md"
                            aria-current="false">
                            <svg class="text-gray-400 group-hover:text-gray-500 flex-shrink-0 -ml-1 mr-3 w-6 h-6"
                                width="71" height="55" viewBox="0 0 71 55" fill="currentColor"
                                xmlns="http://www.w3.org/2000/svg">
                                <g clip-path="url(#clip0)">
                                    <path
                                        d="M60.1045 4.8978C55.5792 2.8214 50.7265 1.2916 45.6527 0.41542C45.5603 0.39851 45.468 0.440769 45.4204 0.525289C44.7963 1.6353 44.105 3.0834 43.6209 4.2216C38.1637 3.4046 32.7345 3.4046 27.3892 4.2216C26.905 3.0581 26.1886 1.6353 25.5617 0.525289C25.5141 0.443589 25.4218 0.40133 25.3294 0.41542C20.2584 1.2888 15.4057 2.8186 10.8776 4.8978C10.8384 4.9147 10.8048 4.9429 10.7825 4.9795C1.57795 18.7309 -0.943561 32.1443 0.293408 45.3914C0.299005 45.4562 0.335386 45.5182 0.385761 45.5576C6.45866 50.0174 12.3413 52.7249 18.1147 54.5195C18.2071 54.5477 18.305 54.5139 18.3638 54.4378C19.7295 52.5728 20.9469 50.6063 21.9907 48.5383C22.0523 48.4172 21.9935 48.2735 21.8676 48.2256C19.9366 47.4931 18.0979 46.6 16.3292 45.5858C16.1893 45.5041 16.1781 45.304 16.3068 45.2082C16.679 44.9293 17.0513 44.6391 17.4067 44.3461C17.471 44.2926 17.5606 44.2813 17.6362 44.3151C29.2558 49.6202 41.8354 49.6202 53.3179 44.3151C53.3935 44.2785 53.4831 44.2898 53.5502 44.3433C53.9057 44.6363 54.2779 44.9293 54.6529 45.2082C54.7816 45.304 54.7732 45.5041 54.6333 45.5858C52.8646 46.6197 51.0259 47.4931 49.0921 48.2228C48.9662 48.2707 48.9102 48.4172 48.9718 48.5383C50.038 50.6034 51.2554 52.5699 52.5959 54.435C52.6519 54.5139 52.7526 54.5477 52.845 54.5195C58.6464 52.7249 64.529 50.0174 70.6019 45.5576C70.6551 45.5182 70.6887 45.459 70.6943 45.3942C72.1747 30.0791 68.2147 16.7757 60.1968 4.9823C60.1772 4.9429 60.1437 4.9147 60.1045 4.8978ZM23.7259 37.3253C20.2276 37.3253 17.3451 34.1136 17.3451 30.1693C17.3451 26.225 20.1717 23.0133 23.7259 23.0133C27.308 23.0133 30.1626 26.2532 30.1066 30.1693C30.1066 34.1136 27.28 37.3253 23.7259 37.3253ZM47.3178 37.3253C43.8196 37.3253 40.9371 34.1136 40.9371 30.1693C40.9371 26.225 43.7636 23.0133 47.3178 23.0133C50.9 23.0133 53.7545 26.2532 53.6986 30.1693C53.6986 34.1136 50.9 37.3253 47.3178 37.3253Z"
                                        fill="" />
                                </g>
                                <defs>
                                    <clipPath id="clip0">
                                        <rect width="71" height="55" fill="white" />
                                    </clipPath>
                                </defs>
                            </svg>

                            <span class="truncate">
                                Discord
                            </span>
                        </a>
                        <a href="https://github.com/cbh123/shlinked"
                            class="text-gray-600 hover:bg-gray-50 group flex items-center px-3 py-2 text-sm font-medium rounded-md"
                            aria-current="false">
                            <svg class="text-gray-400 group-hover:text-gray-500 flex-shrink-0 -ml-1 mr-3 w-6 h-6"
                                fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                    d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z"
                                    clip-rule="evenodd"></path>
                            </svg>
                            <span class="truncate">
                                Code
                            </span>
                        </a>


                    </div>
                    <div class="pt-10">
                        <p class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider"
                            id="communities-headline">
                            My Groups
                        </p>

                        <div class="mt-3 space-y-2" aria-labelledby="groups-headline">
                            <%= for member <- @my_groups do %>
                            <%= if !is_nil(member.group) do %>
                            <%= live_redirect to: Routes.group_show_path(@socket, :show, member.group.id) do %>
                            <div
                                class="group flex items-center px-3 py-2 text-sm font-medium text-gray-600 rounded-md hover:text-gray-900 hover:bg-gray-50">
                                <span class="truncate">
                                    <%= member.group.title %>
                                </span>
                            </div>
                            <% end %>
                            <% end %>
                            <% end %>
                            <%= live_redirect raw("Explore Groups"), to: Routes.group_index_path(@socket, :index), class: "ml-1 px-2 bg-gray-200 rounded-lg py-1 text-gray-500 hover:underline text-xs" %>


                        </div>
                    </div>
                </nav>
            </div>
            <main class="sm:col-span-9 md:col-span-6">

                <%# Checklist Component %>
                <%= live_component @socket, ShlinkedinWeb.ProfileLive.ChecklistComponent,
                    id: "checkbox",
                    profile: @profile,
                    checklist: @checklist %>



                <%# Start a Post %>
                <div class="mx-auto p-5 pb-3 bg-white sm:rounded-lg border block mb-2">

                    <%= live_patch to: Routes.home_index_path(@socket, :new) do %>
                    <button type="button"
                        class="w-full flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-full text-gray-500 bg-white hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        <svg class="-ml-1 mr-3 h-5 w-5" fill="currentColor" viewBox="0 0 20 20"
                            xmlns="http://www.w3.org/2000/svg">
                            <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z">
                            </path>
                            <path fill-rule="evenodd"
                                d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z"
                                clip-rule="evenodd">
                            </path>
                        </svg>
                        Start a post
                    </button>
                    <% end %>

                    <div class="flex justify-between mt-2">
                        <%= live_patch "📢  Create Ad", to: Routes.home_index_path(@socket, :new_ad), class: "items-center px-2 sm:px-4 py-2 border-gray-300 text-xs sm:text-base font-medium rounded-lg text-gray-500 bg-white hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"  %>
                        <%= live_patch "👥  Start Group", to: Routes.group_index_path(@socket, :new), class: "items-center px-2 sm:px-4 py-2 border-gray-300 text-xs sm:text-base font-medium rounded-lg text-gray-500 bg-white hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"  %>
                        <%= live_patch "🗞️  Write Headline", to: Routes.home_index_path(@socket, :new_article), class: "items-center px-2 sm:px-4 py-2 border-gray-300 text-xs sm:text-base font-medium rounded-lg text-gray-500 bg-white hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"  %>
                    </div>
                </div>


                <%# Mobile News %>
                <div id="mobile-news" class="sm:hidden mx-auto w-screen bg-white sm:rounded-lg border-b my-2 py-5">

                    <div class="block sm:w-72 w-full">

                        <div class="flex justify-between px-5">
                            <p class="font-bold">ShlinkNews </p>
                            <div class="text-right">
                                <form phx-change="sort-headlines" id="sort-headlines"
                                    class="mx-auto text-gray-500 text-xs flex">
                                    <div class="mr-3">
                                        <select id="select-headline-type" name="type"
                                            class="text-sm bg-gray-100 px-2 py-1 pr-8 border-0 shadow-none rounded-lg hover:bg-gray-200 inline-flex">
                                            <%= options_for_select(["New": "new", "Claps": "reactions"], @headline_options.type) %>
                                        </select>
                                    </div>
                                    <div>
                                        <select id="select-headline-time" name="time"
                                            class="<%= unless @headline_options.type == "reactions", do: "hidden" %> bg-gray-100 text-sm px-2 py-1 border-0 shadow-none rounded-lg hover:bg-gray-200 inline-flex">

                                            <%= options_for_select(["Hour": "hour", "Today": "today", "This Week": "week", "This Month": "month", "All Time": "all_time"], @headline_options.time) %>
                                        </select>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="px-5 py-2">

                        </div>

                        <div class="h-32 overflow-y-scroll">
                            <div class="space-y-3 px-2" phx-update="<%=@headline_update_action%>" id="news-box">
                                <%= for a <- @articles do %>
                                <%= live_component @socket, ShlinkedinWeb.ArticleLive.NewsBox,
                                    id: "mobile-article-#{a.id}",
                                    profile: @profile,
                                    spin: false,
                                    article: a %>
                                <% end %>

                            </div>
                            <div class="p-5 justify-center">

                                <button phx-click="more-headlines"
                                    class="mx-auto text-xs text-gray-800 font-semibold bg-gray-100 px-2 py-1 rounded-lg hover:bg-gray-200 flex">

                                    <svg class="w-3 h-3 place-self-center mr-2" fill="currentColor" viewBox="0 0 20 20"
                                        xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd"
                                            d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z"
                                            clip-rule="evenodd"></path>
                                    </svg>
                                    More Headlines </button>

                            </div>
                        </div>
                    </div>
                </div>

                <%= live_component @socket, ShlinkedinWeb.HomeLive.WorkComponent, id: "work-component", profile: @profile  %>

                <%# Feed Picker %>
                <div class="">
                    <form phx-change="sort-feed" id="sort-feed" class="mx-auto text-gray-500 text-xs flex">
                        <div class="mr-3">

                            <select id="select-feed-type" name="type"
                                class="px-2 py-1 pr-8 bg-gray-100 border-0 shadow-none rounded-lg hover:bg-gray-200 inline-flex">
                                <%= options_for_select(["🆕 New Posts": "new", "👍 Most Reactions": "reactions", "✨ Featured Posts": "featured"], @feed_options.type) %>
                            </select>
                        </div>
                        <div>
                            <select id="select-feed-time" name="time"
                                class="<%= unless @feed_options.type == "reactions", do: "hidden" %> px-2 py-1 pr-6 bg-gray-100 border-0 shadow-none rounded-lg hover:bg-gray-200 inline-flex">

                                <%= options_for_select(["Hour": "hour", "Today": "today", "This Week": "week", "This Month": "month", "All Time": "all_time"], @feed_options.time) %>
                            </select>
                        </div>
                    </form>
                </div>


                <div class="mt-2">
                    <%# Posts %>

                    <div id="posts" phx-update="<%=@update_action%>" data-page="<%= @page %>">


                        <%= for {entity, _idx} <- Enum.with_index(@posts) do %>
                        <%= case entity.type do %>
                        <% "post" -> %>
                        <%= live_component @socket, ShlinkedinWeb.PostLive.PostComponent,
                                id: entity.content.id,
                                page: @page,
                                profile: @profile,
                                post: entity.content,
                                deleted: entity.content.__meta__.state == :deleted,
                                like_map: @like_map,
                                comment_like_map: @comment_like_map,
                                comment_spin: false,
                                show_post_options: false,
                                num_show_comments: @num_show_comments,
                                return_to: Routes.home_index_path(@socket, :index),
                                comment_highlight: nil,
                                spin: false  %>
                        <% "ad" -> %>
                        <%= live_component @socket, ShlinkedinWeb.AdLive.NewAdComponent,
                                ad: entity.content,
                                profile: @profile,
                                type: :feed,
                                id: :rand.uniform(1000000)
                                %>
                        <% "platinum_ad" -> %>
                        <div id="platinum"
                            class="bg-white relative overflow-hidden rounded-lg shadow py-4 my-2 block md:hidden">
                            <!-- Decorative background image and gradient -->
                            <div aria-hidden="true" class="absolute inset-0">
                                <div class="absolute inset-0 max-w-7xl mx-auto overflow-hidden">
                                    <img src="https://images.unsplash.com/photo-1526304640581-d334cdbbf45e?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2070&q=80"
                                        alt="" class="w-full h-full object-center object-cover">
                                </div>
                                <div class="absolute inset-0 bg-white bg-opacity-75">
                                </div>
                                <div class="absolute inset-0 bg-gradient-to-t from-white via-white">
                                </div>
                            </div>

                            <!-- Callout -->
                            <section aria-labelledby="sale-heading"
                                class="relative -mt-20 mx-auto pt-24 px-4 flex flex-col items-center text-center sm:px-6 lg:px-8">
                                <div class="max-w-2xl mx-auto lg:max-w-none">
                                    <span
                                        class="block text-sm font-semibold uppercase tracking-wide text-gray-500 sm:text-base lg:text-sm xl:text-base">Support
                                        ShlinkedIn</span>
                                    <h2 id="sale-heading"
                                        class="text-4xl font-extrabold text-gray-800 tracking-tight sm:text-5xl">
                                        ShlinkedIn <span
                                            class="text-transparent bg-clip-text bg-gradient-to-tr from-blue-500 via-teal-400 to-green-300">Platinum</span>
                                    </h2>
                                    <p class="mt-4 max-w-xl mx-auto text-sm text-gray-600 mb-4">
                                        An exclusive
                                        new trophy on your profile. Stickers.
                                        Unlimited
                                        business jabs. No ad cooldown. Access to
                                        an exclusive
                                        platinum-only community and new
                                        features. Support us directly
                                        and recieve a lifetime of honor.
                                    </p>

                                    <%= live_redirect "Go Platinum - $6.66 / mo", to: Routes.platinum_index_path(@socket, :index), class: "inline-block bg-gradient-to-tr from-blue-500 via-teal-400 to-green-300 rounded-md py-3 px-8 font-medium text-white hover:from-blue-600 hover:to-green-400 w-auto" %>

                                </div>
                            </section>
                        </div>

                        <% "tribune" -> %>
                        <%= unless is_nil(@random_tribune) do %>
                        <div id="tribune-<%=@random_tribune.id%>" class="my-2">
                            <%= live_redirect to: Routes.content_show_path(@socket, :show, @random_tribune.id) do %>
                            <div class="bg-white hover:bg-gray-50 rounded-lg shadow">
                                <div class="p-5">
                                    <h5 class="mb-2 text-sm font-medium text-indigo-600">SHLINKEDIN TRIBUNE</h5>
                                    <h5 class="font-bold mb-3"><%= @random_tribune.title %> &rarr;</h5>

                                    <p class="text-sm font-medium text-gray-900"><%= @random_tribune.author %></p>
                                </div>
                                <div class="">
                                    <img class="mx-auto bg-cover rounded-b-lg" src="<%= @random_tribune.header_image %>"
                                        alt="">
                                </div>
                            </div>
                            <% end %>
                        </div>
                        <% end %>


                        <% "featured_profiles" -> %>

                        <%# Featured profiles %>
                        <div id="featured-profiles" class="mx-auto p-5 bg-white my-2 sm:rounded-lg">

                            <div class="flex justify-between mb-2">
                                <h5 class=" font-bold ">Shlinkers you may know
                                </h5>
                                <%= live_redirect raw("Explore Profiles &rarr;"), to: Routes.users_index_path(@socket, :index), class: "px-2 py-1 text-gray-500 hover:underline text-xs" %>
                            </div>

                            <div class="grid grid-cols-3 gap-2">
                                <%= for profile <- entity.content do %>

                                <%= live_component @socket, ShlinkedinWeb.UsersLive.ProfileComponent,
                                        id: "profile-#{profile.id}",
                                        profile: @profile,
                                        friend_status: Shlinkedin.Profiles.check_between_friend_status(@profile, profile),
                                        show_profile: profile
                                        %>

                                <% end %>
                            </div>
                        </div>

                        <% "featured_groups" -> %>
                        <%# Featured Groups %>
                        <div id="featured-groups" class="mx-auto p-5 bg-white my-2 sm:rounded-lg ">

                            <div class="flex justify-between mb-2">
                                <h5 class=" font-bold ">Featured Groups</h5>
                                <%= live_redirect raw("Explore Groups &rarr;"), to: Routes.group_index_path(@socket, :index), class: "px-2 py-1 text-gray-500 hover:underline text-xs" %>


                            </div>

                            <div class="flex overflow-x-scroll w-full pb-2">
                                <%= for group <- entity.content do %>

                                <%= live_component @socket, ShlinkedinWeb.GroupLive.GroupComponent,
                                    id: "group-#{group.id}",
                                    profile: @profile,
                                    member_status: Shlinkedin.Groups.is_member?(@profile, group),
                                    group: group
                                    %>

                                <% end %>
                            </div>
                        </div>

                        <% end %>
                        <% end %>
                    </div>

                    <footer id="footer" phx-hook="InfiniteScroll" class="mt-8 text-center text-6xl font-bold">
                        <span class="animate-pulse font-windows">💵
                            Loading...</span>
                    </footer>

                </div>


            </main>

            <aside class="hidden sm:block sm:col-span-4">
                <div class="sticky top-20 space-y-4">

                    <section aria-labelledby="shlink-news">
                        <div class="bg-white rounded-lg shadow">
                            <!-- Desktop News  -->

                            <%# Headline sorter button %>
                            <div class="flex justify-between px-5 pt-5">
                                <p class="font-bold">ShlinkNews </p>
                                <%= live_patch "+ Headline", to: Routes.home_index_path(@socket, :new_article), class: "text-xs text-green-800 font-semibold bg-green-100 px-2 py-1 rounded-lg hover:bg-green-200"  %>
                            </div>

                            <div class="px-5 py-2">
                                <form phx-change="sort-headlines" id="sort-headlines"
                                    class="mx-auto text-gray-500 text-xs flex">
                                    <div class="mr-3">
                                        <select id="select-headline-type" name="type"
                                            class="text-sm bg-gray-100 px-2 py-1 pr-8 border-0 shadow-none rounded-lg hover:bg-gray-200 inline-flex">
                                            <%= options_for_select(["New": "new", "Claps": "reactions"], @headline_options.type) %>
                                        </select>
                                    </div>
                                    <div>
                                        <select id="select-headline-time" name="time"
                                            class="<%= unless @headline_options.type == "reactions", do: "hidden" %> bg-gray-100 text-sm px-2 py-1 pr-6 border-0 shadow-none rounded-lg hover:bg-gray-200 inline-flex">

                                            <%= options_for_select(["Hour": "hour", "Today": "today", "This Week": "week", "This Month": "month", "All Time": "all_time"], @headline_options.time) %>
                                        </select>
                                    </div>
                                </form>
                            </div>

                            <div class="h-56 overflow-y-scroll">
                                <div class="space-y-3 px-2" phx-update="<%=@headline_update_action%>"
                                    id="desktop-news-box">
                                    <%= for a <- @articles do %>
                                    <%= live_component @socket, ShlinkedinWeb.ArticleLive.NewsBox,
                                        id: "article-#{a.id}",
                                        profile: @profile,
                                        spin: false,
                                        article: a %>
                                    <% end %>
                                </div>
                                <div class="p-5 justify-center">
                                    <button phx-click="more-headlines"
                                        class="mx-auto text-xs text-gray-800 font-semibold bg-gray-100 px-2 py-1 rounded-lg hover:bg-gray-200 flex">

                                        <svg class="w-3 h-3 place-self-center mr-2" fill="currentColor"
                                            viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd"
                                                d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z"
                                                clip-rule="evenodd"></path>
                                        </svg>
                                        More Headlines </button>




                                </div>
                            </div>
                        </div>
                    </section>

                    <%= live_component ShlinkedinWeb.ProfileLive.RecommendedComponent,
                        id: :recommended,
                        profile: @profile
                    %>



                    <%= unless is_nil(@random_tribune) do %>
                    <section aria-labelledby="activity-heading">
                        <%= live_redirect to: Routes.content_show_path(@socket, :show, @random_tribune.id) do %>
                        <div class="bg-white hover:bg-gray-50 rounded-lg shadow">
                            <div class="p-5">
                                <h5 class="mb-2 text-sm font-medium text-indigo-600">SHLINKEDIN TRIBUNE</h5>
                                <h5 class="font-bold mb-3"><%= @random_tribune.title %> &rarr;</h5>

                                <p class="text-sm font-medium text-gray-900"><%= @random_tribune.author %></p>
                            </div>
                            <div class="">
                                <img class="mx-auto bg-cover rounded-b-lg" src="<%= @random_tribune.header_image %>"
                                    alt="">
                            </div>
                        </div>
                        <% end %>
                    </section>
                    <% end %>




                </div>
            </aside>
        </div>
    </div>
</div>



<%= if is_nil(@current_user) do %>
<div class="bg-blue-500 text-white -mb-6 fixed h-24 bottom-0 w-full">
    <div class="flex justify-between px-6 py-2 items-center">
        <h2 class="inline-flex text-lg font-extrabold tracking-tight sm:text-4xl">
            <span class="">Join Shlinkedin.</span>
        </h2>
        <div class="inline-flex justify-center">
            <div class="inline-flex rounded-md shadow">
                <%= live_redirect raw("Become a Thought Leader &rarr;"), to: Routes.user_registration_path(@socket, :new), class: "ml-2 inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-blue-600 bg-white hover:bg-blue-100"  %>
            </div>
        </div>
    </div>


</div>

<% end %>


